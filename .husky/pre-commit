#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

BRANCH_NAME=$(git symbolic-ref --short HEAD)

isValidBranchName='(week)[1-4]\/(.*)\/(meeting|daily)'

if [[ $BRANCH_NAME == "main" ]] || [[ $BRANCH_NAME =~ fix ]]; then
    exit 0
elif [[ ! $BRANCH_NAME =~ $isValidBranchName ]]; then
    echo "ğŸš¨ ë¸Œëœì¹˜ ë„¤ì´ë° ê·œì¹™ì„ ì§€ì¼œì£¼ì„¸ìš”. ì˜ˆì‹œ) week1/seo/daily ë˜ëŠ” week1/seo/meeting"
    echo "current brench name  : ${BRANCH_NAME}"
    exit 1
fi

exit 0